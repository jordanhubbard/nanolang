# Execute a move on the board
fn make_move(board: array<int>, from_row: int, from_col: int, to_row: int, to_col: int) -> array<int> {
    let board_size: int = BOARD_SIZE
    let mut new_board: array<int> = board
    let piece: int = (board_get new_board from_row from_col)
    
    # Check if it's a jump
    let is_jump: bool = (== (abs_int (- to_row from_row)) 2)
    if is_jump {
        # Remove jumped piece
        let mid_row: int = (+ from_row (/ (- to_row from_row) 2))
        let mid_col: int = (+ from_col (/ (- to_col from_col) 2))
        set new_board (board_set new_board mid_row mid_col 0)  # EMPTY
    } else {}
    
    # Move piece
    set new_board (board_set new_board from_row from_col 0)  # EMPTY
    set new_board (board_set new_board to_row to_col piece)
    
    # Check for king promotion
    if (and (== piece 1) (== to_row (- board_size 1))) {  # RED_PIECE reaches bottom
        set new_board (board_set new_board to_row to_col 2)  # RED_KING
    } else {}
    if (and (== piece 3) (== to_row 0)) {  # BLACK_PIECE reaches top
        set new_board (board_set new_board to_row to_col 4)  # BLACK_KING
    } else {}
    
    return new_board
}

