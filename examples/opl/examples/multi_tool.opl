# multi_tool.opl - Agent using multiple tools

agent researcher {
  doc "Search and summarize content"
  uses web.search, ai.summarize
  input topic:string
  
  call web.search { query: topic, limit: 3 } as search_results
  assert search_results != null else "Search failed"
  
  call ai.summarize { text: search_results, max_length: 100 } as summary
  emit summary: summary
}
