/* Test character literals */

fn test_char_literals() -> bool {
    let newline: int = '\n'
    let tab: int = '\t'
    let space: int = ' '
    let letter_a: int = 'a'
    let letter_A: int = 'A'
    let zero: int = '0'
    let backslash: int = '\\'
    let quote: int = '\''
    
    /* ASCII values */
    let result1: bool = (== newline 10)
    let result2: bool = (== tab 9)
    let result3: bool = (== space 32)
    let result4: bool = (== letter_a 97)
    let result5: bool = (== letter_A 65)
    let result6: bool = (== zero 48)
    let result7: bool = (== backslash 92)
    let result8: bool = (== quote 39)
    
    return (and result1 (and result2 (and result3 (and result4 
           (and result5 (and result6 (and result7 result8)))))))
}

shadow test_char_literals {
    assert (test_char_literals)
}

fn main() -> int {
    if (test_char_literals) {
        (println "Character literals WORK!")
        (print "newline=10, tab=9, space=32, a=97, A=65, 0=48, ")
        (println "backslash=92, quote=39")
        return 0
    } else {
        (println "Character literals FAILED")
        return 1
    }
}

shadow main {
    assert (== (main) 0)
}
