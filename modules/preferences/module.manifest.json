{
  "name": "preferences",
  "version": "1.0.0",
  "stability": "experimental",
  "summary": "Configuration and settings storage for applications.",
  "use_when": [
    "User needs persistent settings",
    "User says 'config', 'preferences', 'settings', 'save state'",
    "User wants to store/load application configuration"
  ],
  "avoid_when": ["User wants database storage (use sqlite)"],
  "capabilities": ["save_prefs", "load_prefs", "config_storage"],
  "keywords": ["config", "preferences", "settings", "storage"],
  "examples": [],
  "dependencies": {
    "nanolang": ["core>=1.0"],
    "modules": ["std"],
    "system": []
  },
  "io_surfaces": ["files"],
  "alternatives": [{"when": "structured data", "module": "sqlite"}]
}
