{
  "name": "sqlite",
  "version": "1.0.0",
  "description": "SQLite3 - Embedded SQL database engine for local data storage",
  "headers": ["sqlite3.h"],
  "c_sources": ["sqlite_helpers.c"],
  "system_libs": ["sqlite3"],
  "install": {
    "macos": {
      "brew": "sqlite",
      "command": "brew install sqlite"
    },
    "linux": {
      "apt": "libsqlite3-dev",
      "command": "sudo apt install libsqlite3-dev"
    }
  }
}
