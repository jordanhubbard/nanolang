{
  "name": "ui_widgets",
  "version": "1.0.0",
  "stability": "experimental",
  "summary": "UI widget library (buttons, sliders, text inputs) for SDL.",
  "use_when": [
    "User wants GUI widgets",
    "User says 'button', 'slider', 'text input', 'ui controls'",
    "User is building an interactive application"
  ],
  "avoid_when": ["User wants terminal UI (use ncurses)"],
  "capabilities": ["buttons", "sliders", "text_input", "labels", "ui_state"],
  "keywords": ["ui", "widgets", "gui", "controls", "interface"],
  "examples": ["examples/sdl_ui_widgets_extended.nano"],
  "dependencies": {
    "nanolang": ["core>=1.0"],
    "modules": ["sdl", "sdl_ttf"],
    "system": []
  },
  "io_surfaces": ["window"],
  "alternatives": [{"when": "terminal UI", "module": "ncurses"}]
}
