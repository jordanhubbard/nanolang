pub use std_math_vector2d::vec_add
pub use std_math_vector2d::vec_sub
pub use std_math_vector2d::vec_scale
pub use std_math_vector2d::vec_length
pub use std_math_vector2d::vec_normalize

/* Re-export basic array math from std::math::array_ops */
pub use std_math_array::array_add
pub use std_math_array::array_sub
pub use std_math_array::array_mul
pub use std_math_array::array_div
