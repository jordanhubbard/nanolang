    let main_sig: string = (+ fn_kw " main() -> int { return 0 }")
    let shadow_sig: string = (+ "shadow " "main { assert (== (main) 0) }")
    let src: string = (+ main_sig (+ nl (+ shadow_sig nl)))
    assert (== (eval_internal src) 0)
}

fn ansi_escape(code: string) -> string {
    let esc: string = (string_from_char 27)
    return (+ esc (+ "[" (+ code "m")))
}

shadow ansi_escape {
    assert (str_contains (ansi_escape "31") "[31m")
}

fn html_entity_to_char(entity: string) -> string {
    return (cond
        ((== entity "&lt;") "<")
        ((== entity "&gt;") ">")
        ((== entity "&amp;") "&")
        ((== entity "&quot;") "\"")
        (else entity)
    )
}

shadow html_entity_to_char {
    assert (== (html_entity_to_char "&lt;") "<")
    assert (== (html_entity_to_char "&amp;") "&")
}

fn ansi_for_class(cls: string) -> string {
    return (cond
        ((== cls "tok-keyword") "35")
        ((== cls "tok-type") "36")
        ((== cls "tok-string") "32")
        ((== cls "tok-number") "33")
        ((== cls "tok-comment") "90")
        ((== cls "tok-operator") "37")
        ((== cls "tok-paren") "37")
        ((== cls "tok-identifier") "0")
        (else "")
    )
}

shadow ansi_for_class {
    assert (== (ansi_for_class "tok-keyword") "35")
}

# Efficient in-place string comparison without substring allocation
# Compares pattern against text starting at position pos
# O(pattern_length) instead of O(text_length)
fn str_matches_at(text: string, pos: int, pattern: string) -> bool {
    let pattern_len: int = (str_length pattern)
    let text_len: int = (str_length text)
    # Check if pattern would extend past end of text
    if (> (+ pos pattern_len) text_len) {
        return false
    } else { (print "") }
    # Compare character by character - no substring allocation
    let mut i: int = 0
    while (< i pattern_len) {
        if (!= (char_at text (+ pos i)) (char_at pattern i)) {
            return false
        } else { (print "") }
        set i (+ i 1)
    }
    return true
}

shadow str_matches_at {
    assert (str_matches_at "hello" 0 "he")
    assert (str_matches_at "hello" 0 "hello")
    assert (str_matches_at "hello" 2 "llo")
    assert (not (str_matches_at "hello" 1 "he"))
    assert (not (str_matches_at "hello" 3 "llo"))
    assert (not (str_matches_at "hi" 0 "hello"))
}

fn highlight_html_to_ansi(html: string) -> string {
    let sb: StringBuilder = (sb_new)
    let n: int = (str_length html)
    let mut i: int = 0
    let mut batch_start: int = 0
    let reset: string = (ansi_escape "0")
    # Pre-compute pattern lengths to avoid repeated str_length calls
    let span_prefix: string = "<span class=\""
    let span_prefix_len: int = (str_length span_prefix)
    let span_close: string = "</span>"
    let span_close_len: int = (str_length span_close)

    while (< i n) {
        let c: int = (char_at html i)
        if (== c 60) {
            # Flush batched regular characters before handling tag
            if (> i batch_start) {
                (sb_append sb (str_substring html batch_start (- i batch_start)))
            } else {}
            # Use efficient in-place comparison (no substring allocation)
            if (str_matches_at html i span_close) {
                (sb_append sb reset)
                set i (+ i span_close_len)
            } else {
                if (str_matches_at html i span_prefix) {
                    let mut cls_start: int = (+ i span_prefix_len)
                    let mut cls_end: int = cls_start
                    while (and (< cls_end n) (!= (char_at html cls_end) 34)) {
                        set cls_end (+ cls_end 1)
                    }
                    let cls: string = (str_substring html cls_start (- cls_end cls_start))
                    let mut tag_end: int = cls_end
                    while (and (< tag_end n) (!= (char_at html tag_end) 62)) {
                        set tag_end (+ tag_end 1)
                    }
                    if (< tag_end n) {
                        set tag_end (+ tag_end 1)
                    } else { (print "") }
                    let code: string = (ansi_for_class cls)
                    if (!= code "") {
                        (sb_append sb (ansi_escape code))
                    } else { (print "") }
                    set i tag_end
                } else {
                    (sb_append sb "<")
                    set i (+ i 1)
                }
            }
            set batch_start i
        } else {
            if (== c 38) {
                # Flush batched regular characters before handling entity
                if (> i batch_start) {
                    (sb_append sb (str_substring html batch_start (- i batch_start)))
                } else {}
                let mut end: int = (+ i 1)
                while (and (< end n) (!= (char_at html end) 59)) {
                    set end (+ end 1)
                }
                if (< end n) {
                    let entity: string = (str_substring html i (+ (- end i) 1))
                    (sb_append sb (html_entity_to_char entity))
                    set i (+ end 1)
                } else {
                    (sb_append sb "&")
                    set i (+ i 1)
                }
                set batch_start i
            } else {
                # Regular character - just advance (will be batched)
                set i (+ i 1)
            }
        }
    }
    # Flush any remaining batched characters
    if (> n batch_start) {
        (sb_append sb (str_substring html batch_start (- n batch_start)))
    } else {}
    (sb_append sb reset)
    return (sb_to_string sb)
}

shadow highlight_html_to_ansi {
    let html: string = "<span class=\"tok-keyword\">fn</span>"
    let out: string = (highlight_html_to_ansi html)
    assert (str_contains out "[35m")
}

