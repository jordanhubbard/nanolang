{
  "name": "sdl_helpers",
  "version": "1.0.0",
  "stability": "stable",
  "summary": "SDL utility functions for common tasks (drawing, input polling, font loading).",
  "use_when": [
    "User wants simplified SDL operations",
    "User says 'draw text', 'poll input', 'fill rectangle'",
    "User needs portable font loading across platforms"
  ],
  "avoid_when": [
    "User wants raw SDL control (use sdl directly)",
    "User needs advanced SDL features not wrapped here"
  ],
  "capabilities": [
    "draw_text",
    "poll_input",
    "render_shapes",
    "load_fonts_portable"
  ],
  "keywords": ["sdl", "utilities", "helpers", "drawing", "text", "input"],
  "examples": [
    "examples/sdl_drawing_primitives.nano",
    "examples/sdl_texture_demo.nano"
  ],
  "dependencies": {
    "nanolang": ["core>=1.0"],
    "modules": ["sdl"],
    "system": [
      {"id": "sdl2", "install": {"apt": "libsdl2-dev", "brew": "sdl2"}}
    ]
  },
  "io_surfaces": ["window"],
  "alternatives": [
    {"when": "raw SDL control", "module": "sdl"}
  ]
}

