{
  "name": "glew",
  "version": "1.0.0",
  "description": "GLEW - OpenGL Extension Wrangler for loading OpenGL functions and extensions",
  "headers": ["GL/glew.h"],
  "pkg_config": ["glew"],
  "ldflags": ["-framework", "OpenGL"],
  "install": {
    "macos": {
      "brew": "glew",
      "command": "brew install glew"
    },
    "linux": {
      "apt": "libglew-dev",
      "command": "sudo apt install libglew-dev"
    }
  },
  "dependencies": ["glfw"]
}

