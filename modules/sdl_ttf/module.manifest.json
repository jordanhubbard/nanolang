{
  "name": "sdl_ttf",
  "version": "1.0.0",
  "stability": "stable",
  "summary": "SDL TrueType font rendering via SDL2_ttf.",
  "use_when": [
    "User wants to render text with TTF fonts",
    "User says 'true type fonts', 'text rendering', 'custom fonts'",
    "User needs anti-aliased text in SDL"
  ],
  "avoid_when": [
    "User wants bitmap fonts only (use SDL primitives)",
    "User doesn't need text rendering"
  ],
  "capabilities": [
    "load_ttf_fonts",
    "render_text",
    "text_blending",
    "font_metrics"
  ],
  "keywords": ["sdl", "fonts", "ttf", "text", "rendering", "typography"],
  "examples": [
    "examples/sdl_drawing_primitives.nano",
    "examples/sdl_ui_widgets_extended.nano"
  ],
  "dependencies": {
    "nanolang": ["core>=1.0"],
    "modules": ["sdl"],
    "system": [
      {"id": "sdl2_ttf", "install": {"apt": "libsdl2-ttf-dev", "brew": "sdl2_ttf"}}
    ]
  },
  "io_surfaces": ["window"],
  "alternatives": [
    {"when": "bitmap fonts", "module": "sdl"}
  ]
}

