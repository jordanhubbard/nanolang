{
  "name": "curl",
  "version": "1.0.0",
  "description": "libcurl - HTTP/HTTPS client for making web requests and REST API calls",
  "headers": ["curl/curl.h"],
  "c_sources": ["curl_helpers.c"],
  "pkg_config": ["libcurl"],
  "install": {
    "macos": {
      "brew": "curl",
      "command": "brew install curl"
    },
    "linux": {
      "apt": "libcurl4-openssl-dev",
      "command": "sudo apt install libcurl4-openssl-dev"
    }
  }
}
