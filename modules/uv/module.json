{
  "name": "uv",
  "version": "1.0.0",
  "description": "libuv - Cross-platform asynchronous I/O library (powers Node.js event loop)",
  "headers": ["uv.h"],
  "c_sources": ["uv_helpers.c"],
  "pkg_config": ["libuv"],
  "install": {
    "macos": {
      "brew": "libuv",
      "command": "brew install libuv"
    },
    "linux": {
      "apt": "libuv1-dev",
      "command": "sudo apt install libuv1-dev"
    }
  }
}
