{
  "name": "glut",
  "version": "1.0.0",
  "stability": "stable",
  "summary": "OpenGL Utility Toolkit for window management (legacy, prefer GLFW).",
  "use_when": [
    "User wants simple OpenGL window setup",
    "User says 'glut', 'freeglut', 'legacy opengl'",
    "User porting GLUT applications"
  ],
  "avoid_when": ["User wants modern OpenGL workflow (use glfw)"],
  "capabilities": ["create_window", "input_basic", "opengl_context"],
  "keywords": ["opengl", "glut", "window", "legacy"],
  "examples": [],
  "dependencies": {
    "nanolang": ["core>=1.0"],
    "modules": ["opengl"],
    "system": [{"id": "freeglut", "install": {"apt": "freeglut3-dev", "brew": "freeglut"}}]
  },
  "io_surfaces": ["window"],
  "alternatives": [{"when": "modern OpenGL", "module": "glfw"}]
}
