/* Negative test: typechecker should reject mismatched argument types */

fn add(a: int, b: int) -> int {
    return (+ a b)
}

shadow add {
    assert (== (add 1 2) 3)
}

fn main() -> int {
    let label: string = "oops"
    /* Intentional type mismatch: passing string to int parameter */
    return (add label 10)
}

shadow main {
    assert (== 1 1)
}
