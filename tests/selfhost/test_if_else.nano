/* Test if/else statements */

fn test_simple_if() -> int {
    if (> 5 3) {
        return 1
    } else {
        return 0
    }
}

shadow test_simple_if {
    assert (== (test_simple_if) 1)
}

fn test_simple_else() -> int {
    if (< 5 3) {
        return 0
    } else {
        return 1
    }
}

shadow test_simple_else {
    assert (== (test_simple_else) 1)
}

fn test_nested_if() -> int {
    if (> 10 5) {
        if (< 3 7) {
            return 42
        } else {
            return 0
        }
    } else {
        return 0
    }
}

shadow test_nested_if {
    assert (== (test_nested_if) 42)
}

fn test_if_with_let() -> int {
    if (> 5 3) {
        let x: int = 100
        return x
    } else {
        return 0
    }
}

shadow test_if_with_let {
    assert (== (test_if_with_let) 100)
}

fn test_if_with_call() -> int {
    if (== (test_simple_if) 1) {
        return 999
    } else {
        return 0
    }
}

shadow test_if_with_call {
    assert (== (test_if_with_call) 999)
}

fn main() -> int {
    return 0
}
