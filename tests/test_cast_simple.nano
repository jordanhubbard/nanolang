# Simple Type Casting Test

fn test_int_to_float() -> float {
    let x: int = 42
    return (cast_float x)
}

shadow test_int_to_float {
    let result: float = (test_int_to_float)
    (print "Result: ")
    (println result)
    assert (== result 42.0)
}

fn test_float_to_int() -> int {
    let y: float = 3.7
    return (cast_int y)
}

shadow test_float_to_int {
    assert (== (test_float_to_int) 3)
}

fn test_bool_to_int() -> int {
    return (cast_int true)
}

shadow test_bool_to_int {
    assert (== (test_bool_to_int) 1)
}

fn test_int_to_string() -> string {
    return (cast_string 42)
}

shadow test_int_to_string {
    assert (== (test_int_to_string) "42")
}

fn main() -> int {
    (println "=== Simple Casting Tests ===")
    (print "cast_float(42) = ")
    (println (cast_float 42))
    (print "cast_int(3.7) = ")
    (println (cast_int 3.7))
    (print "cast_int(true) = ")
    (println (cast_int true))
    (print "cast_string(42) = ")
    (println (cast_string 42))
    (println "âœ… All tests passed!")
    return 0
}

shadow main {
    assert (== (main) 0)
}

