fn sign(x: int) -> int {
    return (cond
        ((< x 0) -1)
        ((> x 0) 1)
        (else 0)
    )
}

shadow sign {
    assert (== (sign -5) -1)
    assert (== (sign 0) 0)
    assert (== (sign 7) 1)
}

fn main() -> int {
    assert (== (sign 123) 1)
    return 0
}

shadow main { assert true }
