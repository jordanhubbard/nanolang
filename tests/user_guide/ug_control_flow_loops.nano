/* User guide test: control flow with while loops */
fn sum_1_to_n(n: int) -> int {
    let mut sum: int = 0
    let mut i: int = 1
    while (<= i n) {
        set sum (+ sum i)
        set i (+ i 1)
    }
    return sum
}

shadow sum_1_to_n {
    assert (== (sum_1_to_n 1) 1)
    assert (== (sum_1_to_n 5) 15)
}

fn main() -> int {
    assert (== (sum_1_to_n 10) 55)
    return 0
}

shadow main { assert true }
