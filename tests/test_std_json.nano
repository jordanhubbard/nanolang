shadow json_basic {
    let j: Json = (parse "{\"a\": 1, \"b\": \"hi\"}")
    assert (!= j (cast 0 Json))

    assert (object_has j "a")

    let a: Json = (get j "a")
    assert (!= a (cast 0 Json))
    assert (is_number a)
    assert (== (as_int a) 1)
    (free a)

    let b: Json = (get j "b")
    assert (!= b (cast 0 Json))
    assert (str_equals (as_string b) "hi")
    (free b)

    let ks: array<string> = (keys j)
    assert (== (array_length ks) 2)
    assert (contains_str ks "a")
    assert (contains_str ks "b")

    let s: string = (stringify j)
    assert (> (str_length s) 0)

    (free j)
}

shadow get_int {
    let j: Json = (parse "{\"a\": 1}")
    assert (== (get_int j "a") 1)
    assert (== (get_int j "missing") 0)
    (free j)
}

shadow get_string {
    let j: Json = (parse "{\"b\": \"hi\"}")
    assert (str_equals (get_string j "b") "hi")
    assert (str_equals (get_string j "missing") "")
    (free j)
}

shadow json_stringify_many {
    let j: Json = (parse "{\"a\": 1, \"b\": [1, 2, 3], \"c\": {\"x\": true}}")
    let mut i: int = 0
    while (< i 2000) {
        let s: string = (stringify j)
        assert (> (str_length s) 0)
        set i (+ i 1)
    }
    (free j)
}

