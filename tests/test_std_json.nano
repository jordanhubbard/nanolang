from "std/json/json.nano" import Json, parse, free, object_has, get, get_int, get_string, as_int, as_string, is_number, keys, stringify

fn contains_str(xs: array<string>, target: string) -> bool {
    let mut i: int = 0
    while (< i (array_length xs)) {
        if (str_equals (at xs i) target) {
            return true
        }
        set i (+ i 1)
    }
    return false
}

