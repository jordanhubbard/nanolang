    if (and true false) {
        return false
    } else {}
    
    if (and false true) {
        return false
    } else {}
    
    if (and false false) {
        return false
    } else {}
    
    # OR
    if (not (or true true)) {
        return false
    } else {}
    
    if (not (or true false)) {
        return false
    } else {}
    
    if (not (or false true)) {
        return false
    } else {}
    
    if (or false false) {
        return false
    } else {}
    
    # NOT
    if (not (not false)) {
        return false
