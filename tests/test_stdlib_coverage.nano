# Test arithmetic operations
fn test_arithmetic() -> bool {
    # Addition
    if (not (== (+ 5 3) 8)) {
        return false
    } else {}
    
    # Subtraction
    if (not (== (- 10 4) 6)) {
        return false
    } else {}
    
    # Multiplication
    if (not (== (* 7 6) 42)) {
        return false
    } else {}
    
    # Division
    if (not (== (/ 20 5) 4)) {
        return false
    } else {}
    
    # Modulo
    if (not (== (% 17 5) 2)) {
        return false
    } else {}
    
    return true
}

# Test comparison operations
fn test_comparisons() -> bool {
    # Equality
    if (not (== 5 5)) {
        return false
    } else {}
    
    if (== 5 6) {
        return false
    } else {}
    
    # Inequality
    if (not (!= 5 6)) {
        return false
    } else {}
    
    if (!= 5 5) {
        return false
    } else {}
    
    # Less than
    if (not (< 3 5)) {
        return false
    } else {}
    
    if (< 5 3) {
        return false
    } else {}
    
    # Greater than
    if (not (> 7 3)) {
        return false
    } else {}
    
    if (> 3 7) {
        return false
    } else {}
    
    # Less than or equal
    if (not (<= 3 5)) {
        return false
    } else {}
    
    if (not (<= 5 5)) {
        return false
    } else {}
    
    if (<= 7 5) {
        return false
    } else {}
    
    # Greater than or equal
    if (not (>= 7 5)) {
        return false
    } else {}
    
    if (not (>= 5 5)) {
        return false
    } else {}
    
    if (>= 3 5) {
        return false
    } else {}
    
    return true
}

