# Comprehensive tests for stdlib functions to improve code coverage
# Tests basic stdlib operations that may not be covered elsewhere

# Test string operations
fn test_string_ops() -> bool {
    # Test str_length
    let empty: string = ""
    if (not (== (str_length empty) 0)) {
        return false
    } else {}
    
    let hello: string = "hello"
    if (not (== (str_length hello) 5)) {
        return false
    } else {}
    
    # Test str_equals
    if (not (str_equals hello "hello")) {
        return false
    } else {}
    
    if (str_equals hello "world") {
        return false
    } else {}
    
    # Test str_contains
    if (not (str_contains hello "ell")) {
        return false
    } else {}
    
    if (str_contains hello "xyz") {
        return false
    } else {}
    
    # Test string concatenation
    let world: string = "world"
    let combined: string = (+ hello world)
    if (not (str_equals combined "helloworld")) {
        return false
    } else {}
    
    # Test str_substring
    let sub: string = (str_substring hello 1 3)
    if (not (str_equals sub "ell")) {
        return false
    } else {}
    
    return true
}

# Test array operations
fn test_array_ops() -> bool {
    # Test array_new
    let arr: array<int> = (array_new 5 0)
    if (not (== (array_length arr) 5)) {
        return false
    } else {}
    
    # Test array_set and array_get (using 'at')
    (array_set arr 0 10)
    (array_set arr 1 20)
    (array_set arr 2 30)
    (array_set arr 3 40)
    (array_set arr 4 50)
    
    if (not (== (at arr 0) 10)) {
        return false
    } else {}
    
    if (not (== (at arr 1) 20)) {
        return false
    } else {}
    
    if (not (== (at arr 2) 30)) {
        return false
    } else {}
    
    if (not (== (at arr 3) 40)) {
        return false
    } else {}
    
    if (not (== (at arr 4) 50)) {
        return false
    } else {}
    
    return true
}

# Test array of strings
fn test_array_strings() -> bool {
    let arr: array<string> = (array_new 3 "")
    (array_set arr 0 "first")
    (array_set arr 1 "second")
    (array_set arr 2 "third")
    
    if (not (str_equals (at arr 0) "first")) {
        return false
    } else {}
    
    if (not (str_equals (at arr 1) "second")) {
        return false
    } else {}
    
    if (not (str_equals (at arr 2) "third")) {
        return false
    } else {}
    
    return true
}

# Test array of booleans
