/* Run the transpiler phase */
fn run_transpiler(parser_state: Parser, c_file: string, verbose: bool) -> CompilationPhaseResult {
    if verbose {
        (println "Phase 4: Transpiling to C...")
    }
    
    /* Run transpiler */
    let transpile_output: TranspilePhaseOutput = (transpile_phase parser_state c_file)
    
    if transpile_output.had_error {
        /* Format error message from diagnostics */
        let error_msg: string = "Transpiler errors detected"
        # TODO: Use error_messages.nano to format diagnostics nicely
        return CompilationPhaseResult.Error {
            message: error_msg,
            phase: 4  # PHASE_TRANSPILE
        }
    }
    
    /* Write generated C code to file */
    let write_result: int = (file_write c_file transpile_output.c_source)
    if (!= write_result 0) {
        let error_msg: string = "Failed to write C file"
        return CompilationPhaseResult.Error {
            message: error_msg,
            phase: 4  # PHASE_TRANSPILE
        }
    }
    
    if verbose {
        (println "  C file created:")
        (println c_file)
    }
    
    /* Return success - we don't have a TranspileResult variant, so we'll continue to CC phase */
    return CompilationPhaseResult.CCompileResult {
        binary_path: c_file
    }
}

