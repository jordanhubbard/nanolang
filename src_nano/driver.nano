/* Run the parser phase */
fn run_parser(lex_output: LexPhaseOutput, verbose: bool) -> CompilationPhaseResult {
    if verbose {
        (println "Phase 2: Parsing...")
    }
    
    /* Run parser */
    let parse_output: ParsePhaseOutput = (parse_phase_run lex_output)
    
    if parse_output.had_error {
        /* Format error message from diagnostics */
        let error_msg: string = "Parser errors detected"
        # TODO: Use error_messages.nano to format diagnostics nicely
        return CompilationPhaseResult.Error {
            message: error_msg,
            phase: 2  # PHASE_PARSE
        }
    }
    
    if verbose {
        (print "  Functions: ")
        (println (int_to_string parse_output.parser.functions_count))
    }
    
    return CompilationPhaseResult.ParseResult { output: parse_output }
}

