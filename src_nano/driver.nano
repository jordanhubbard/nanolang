/* Run the type checker phase */
fn run_typechecker(parser_state: Parser, verbose: bool) -> CompilationPhaseResult {
    if verbose {
        (println "Phase 3: Type checking...")
    }
    
    /* Run typechecker */
    let type_output: TypecheckPhaseOutput = (typecheck_phase parser_state)
    
    if type_output.had_error {
        /* Format error message from diagnostics */
        let error_msg: string = "Type checker errors detected"
        # TODO: Use error_messages.nano to format diagnostics nicely
        return CompilationPhaseResult.Error {
            message: error_msg,
            phase: 3  # PHASE_TYPECHECK
        }
    }
    
    if verbose {
        (println "  Type check complete")
    }
    
    return CompilationPhaseResult.TypeCheckResult { output: type_output }
}

