    set s (str_concat s q)
    set s (str_concat s ":")
    if (== exit_code 0) { set s (str_concat s "true") } else { set s (str_concat s "false") }
    set s (str_concat s ",")
    set s (str_concat s q)
    set s (str_concat s "exit_code")
