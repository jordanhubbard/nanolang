    set s (str_concat s q)
    set s (str_concat s "input_file")
    set s (str_concat s q)
    set s (str_concat s ":")
    set s (str_concat s q)
    set s (str_concat s (llm_escape_json input_file))
    set s (str_concat s q)
    set s (str_concat s ",")
    set s (str_concat s q)
    set s (str_concat s "output_file")
    set s (str_concat s q)
    set s (str_concat s ":")
    set s (str_concat s q)
    set s (str_concat s (llm_escape_json output_file))
    set s (str_concat s q)
    set s (str_concat s ",")
    set s (str_concat s q)
    set s (str_concat s "diagnostics")
    set s (str_concat s q)
