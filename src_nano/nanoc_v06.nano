    let n: int = (list_CompilerDiagnostic_length diags)
    let mut i: int = 0
    while (< i n) {
        let d: CompilerDiagnostic = (list_CompilerDiagnostic_get diags i)
        if (> i 0) { set s (str_concat s ",") } else { (print "") }
        set s (str_concat s "{")
