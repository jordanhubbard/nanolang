struct CompileOptions {
    input_file: string,
    output_file: string,
    verbose: bool,
    keep_c: bool,
    llm_diags_json_path: string,
    show_help: bool
}

fn default_options() -> CompileOptions {
    return CompileOptions {
        input_file: "",
        output_file: "a.out",
        verbose: false,
        keep_c: false,
        llm_diags_json_path: "",
        show_help: false
    }
}

fn parse_args() -> CompileOptions {
    let argc: int = (get_argc)
    let mut opts: CompileOptions = (default_options)
    let mut i: int = 1
    
    while (< i argc) {
        let arg: string = (get_argv i)
        
        if (str_equals arg "-h") {
            set opts CompileOptions {
                input_file: opts.input_file,
                output_file: opts.output_file,
                verbose: opts.verbose,
                keep_c: opts.keep_c,
                llm_diags_json_path: opts.llm_diags_json_path,
                show_help: true
            }
        } else {
            if (str_equals arg "--help") {
                set opts CompileOptions {
                    input_file: opts.input_file,
                    output_file: opts.output_file,
                    verbose: opts.verbose,
                    keep_c: opts.keep_c,
                    llm_diags_json_path: opts.llm_diags_json_path,
                    show_help: true
                }
            } else {
                if (str_equals arg "-v") {
                    set opts CompileOptions {
                        input_file: opts.input_file,
                        output_file: opts.output_file,
                        verbose: true,
                        keep_c: opts.keep_c,
                        llm_diags_json_path: opts.llm_diags_json_path,
                        show_help: opts.show_help
                    }
                } else {
                    if (str_equals arg "--verbose") {
                        set opts CompileOptions {
                            input_file: opts.input_file,
                            output_file: opts.output_file,
                            verbose: true,
                            keep_c: opts.keep_c,
                            llm_diags_json_path: opts.llm_diags_json_path,
                            show_help: opts.show_help
                        }
                    } else {
                        if (str_equals arg "-k") {
                            set opts CompileOptions {
                                input_file: opts.input_file,
                                output_file: opts.output_file,
                                verbose: opts.verbose,
                                keep_c: true,
                                llm_diags_json_path: opts.llm_diags_json_path,
                                show_help: opts.show_help
                            }
                        } else {
                            if (str_equals arg "--keep-c") {
                                set opts CompileOptions {
                                    input_file: opts.input_file,
                                    output_file: opts.output_file,
                                    verbose: opts.verbose,
                                    keep_c: true,
                                    llm_diags_json_path: opts.llm_diags_json_path,
                                    show_help: opts.show_help
                                }
                            } else {
                                if (str_equals arg "--llm-diags-json") {
                                    if (< (+ i 1) argc) {
                                        set i (+ i 1)
                                        let p: string = (get_argv i)
                                        set opts CompileOptions {
                                            input_file: opts.input_file,
                                            output_file: opts.output_file,
                                            verbose: opts.verbose,
                                            keep_c: opts.keep_c,
                                            llm_diags_json_path: p,
                                            show_help: opts.show_help
                                        }
                                    } else { (print "") }
                                } else {
                                if (str_equals arg "-o") {
                                    if (< (+ i 1) argc) {
                                        set i (+ i 1)
                                        let output: string = (get_argv i)
                                        set opts CompileOptions {
                                            input_file: opts.input_file,
                                            output_file: output,
                                            verbose: opts.verbose,
                                            keep_c: opts.keep_c,
                                            llm_diags_json_path: opts.llm_diags_json_path,
                                            show_help: opts.show_help
                                        }
                                    } else {
                                        (print "")
                                    }
                                } else {
                                    /* Assume it's the input file if no option prefix */
                                    if (== opts.input_file "") {
                                        set opts CompileOptions {
                                            input_file: arg,
                                            output_file: opts.output_file,
                                            verbose: opts.verbose,
                                            keep_c: opts.keep_c,
                                            llm_diags_json_path: opts.llm_diags_json_path,
                                            show_help: opts.show_help
                                        }
                                    } else {
                                        (print "")
                                    }
                                }
                                }
                            }
                        }
                    }
                }
            }
        }
        
        set i (+ i 1)
    }
    
    return opts
}

