fn llm_escape_json(s: string) -> string {
    let mut out: string = ""
    let n: int = (str_length s)
    let q: string = (string_from_char 34)
    let mut i: int = 0
    while (< i n) {
        let c: int = (char_at s i)
        if (== c 92) {
            set out (str_concat out "\\\\")
        } else {
            if (== c 34) {
                set out (str_concat out "\\")
                set out (str_concat out q)
            } else {
                if (== c 10) {
                    set out (str_concat out "\\n")
                } else {
                    if (== c 13) {
                        set out (str_concat out "\\r")
                    } else {
                        if (== c 9) {
                            set out (str_concat out "\\t")
                        } else {
                            set out (str_concat out (string_from_char c))
                        }
                    }
                }
            }
        }
        set i (+ i 1)
    }
    return out
}

fn llm_write_diags_json(path: string, input_file: string, output_file: string, exit_code: int, diags: List<CompilerDiagnostic>) -> int {
