        set s (str_concat s ",")
        set s (str_concat s q)
        set s (str_concat s "message")
        set s (str_concat s q)
        set s (str_concat s ":")
        set s (str_concat s q)
        set s (str_concat s (llm_escape_json d.message))
        set s (str_concat s q)
        set s (str_concat s ",")
        set s (str_concat s q)
        set s (str_concat s "phase")
        set s (str_concat s q)
        set s (str_concat s ":")
        set s (str_concat s (int_to_string d.phase))
        set s (str_concat s ",")
        set s (str_concat s q)
        set s (str_concat s "severity")
        set s (str_concat s q)
        set s (str_concat s ":")
        set s (str_concat s (int_to_string d.severity))
        set s (str_concat s ",")
        set s (str_concat s q)
        set s (str_concat s "location")
        set s (str_concat s q)
        set s (str_concat s ":{")
        set s (str_concat s q)
        set s (str_concat s "file")
        set s (str_concat s q)
        set s (str_concat s ":")
        set s (str_concat s q)
        set s (str_concat s (llm_escape_json d.location.file))
        set s (str_concat s q)
        set s (str_concat s ",")
        set s (str_concat s q)
        set s (str_concat s "line")
        set s (str_concat s q)
        set s (str_concat s ":")
        set s (str_concat s (int_to_string d.location.line))
        set s (str_concat s ",")
        set s (str_concat s q)
        set s (str_concat s "column")
        set s (str_concat s q)
        set s (str_concat s ":")
        set s (str_concat s (int_to_string d.location.column))
        set s (str_concat s "}}")
        set i (+ i 1)
